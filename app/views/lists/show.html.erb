<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0"><%= @list.name %></h1>

    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-warning" %>
  </div>

  <div class="movie-cards row mb-5">
    <% @list.movies.each do |movie| %>
      <div class="movie-card border col-6">
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <p class="m-0"><%= movie.title %></p>
        <p><%= bookmark.comment %></p>
      </div>
    <% end %>
  </div>


  <h1>Add another movie</h1>
  <%= render "bookmarks/form" %>


  <%= link_to "Back to List", root_path %>

</div>
